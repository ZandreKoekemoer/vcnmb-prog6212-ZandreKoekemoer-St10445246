@model MVCprog.Models.Claim
@{
    Layout = "_Layout";
}

<h2>Submit Claim</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success">@ViewBag.Message</div>
}
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<form asp-action="SubmitClaim" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>Description:</label>
        <input asp-for="Description" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Hours Worked:</label>
        <input asp-for="HoursWorked" class="form-control" type="number" step="0.1" required />
    </div>

    <div class="form-group">
        <label>Hourly Rate:</label>
        <input asp-for="HourlyRate" class="form-control" type="number" step="0.01" required />
    </div>

    <div class="form-group">
        <label>Notes:</label>
        <textarea asp-for="Notes" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label>Upload Supporting Document:</label>
        <input type="file" name="supportingFile" class="form-control" accept=".pdf,.docx,.xlsx" />
        <small class="text-muted">Allowed: PDF, DOCX, XLSX (max 5MB) - Required</small>
    </div>

    <br />
    <button type="submit" class="btn btn-primary">Submit Claim</button>
</form>
